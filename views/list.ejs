<%- include("header") -%>

    <div class="box" id="heading">

        <h1><%=kindofday%></h1>

    </div>

    <div class="box">

        <%for(var i=0;i<newlistitems.length;i++){%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value=<%=newlistitems[i]._id%> onChange="this.form.submit()">
                    <input type="hidden" name="listname" value="<%=kindofday%>"></input>>
                    <p>
                        <%=newlistitems[i].name;%>
                    </p>
        
                </div>
            </form>
        <%}%>
        <form class="item" method="post" action="/">
            <input type="text" name="newitem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value= <%= kindofday %>>+</button>
        </form>    
    </div>
    
    <%- include("header") -%>

